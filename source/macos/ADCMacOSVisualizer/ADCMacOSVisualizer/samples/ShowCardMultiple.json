{
   "$schema":"http://adaptivecards.io/schemas/adaptive-card.json",
   "type":"AdaptiveCard",
   "version":"1.3",
   "body":[
      {
         "type":"TextBlock",
         "text":"This card's action will show another card"
      }
   ],
   "actions":[
      {
         "type":"Action.ShowCard",
         "title":"Action.ShowCard",
         "card":{
            "type":"AdaptiveCard",
            "body":[
               {
                  "type":"TextBlock",
                  "text":"What do you think?"
               }
            ],
            "actions":[
               {
                  "type":"Action.Submit",
                  "title":"Neat!"
               }
            ]
         }
      },
      {
         "type":"Action.ShowCard",
         "title":"Action.ShowCard - 2",
         "card":{
            "$schema":"http://adaptivecards.io/schemas/adaptive-card.json",
            "type":"AdaptiveCard",
            "version":"1.0",
            "body":[
               {
                  "type":"TextBlock",
                  "text":"Default text input"
               },
               {
                  "type":"Input.Text",
                  "id":"defaultInputId",
                  "placeholder":"enter comment",
                  "maxLength":500
               },
               {
                  "type":"TextBlock",
                  "text":"Multiline text input"
               },
               {
                  "type":"Input.Text",
                  "id":"multilineInputId",
                  "placeholder":"enter comment",
                  "maxLength":500,
                  "isMultiline":true
               },
               {
                  "type":"TextBlock",
                  "text":"Pre-filled value"
               },
               {
                  "type":"Input.Text",
                  "id":"prefilledInputId",
                  "placeholder":"enter comment",
                  "maxLength":500,
                  "isMultiline":true,
                  "value":"This value was pre-filled"
               }
            ],
            "actions":[
               {
                  "type":"Action.Submit",
                  "title":"OK"
               }
            ]
         }
      },
      {
         "type":"Action.ShowCard",
         "title":"Action.ShowCard - 3",
         "card":{
            "$schema":"http://adaptivecards.io/schemas/adaptive-card.json",
            "type":"AdaptiveCard",
            "version":"1.0",
            "body":[
               {
                  "type":"TextBlock",
                  "text":"Default text input"
               },
               {
                  "type":"Input.Text",
                  "id":"defaultInputId-2",
                  "placeholder":"enter comment",
                  "maxLength":500
               },
               {
                  "type":"TextBlock",
                  "text":"Multiline text input"
               },
               {
                  "type":"Input.Text",
                  "id":"multilineInputId-2",
                  "placeholder":"enter comment",
                  "maxLength":500,
                  "isMultiline":true
               },
               {
                  "type":"TextBlock",
                  "text":"Pre-filled value"
               },
               {
                  "type":"Input.Text",
                  "id":"prefilledInputId-2",
                  "placeholder":"enter comment",
                  "maxLength":500,
                  "isMultiline":true,
                  "value":"This value was pre-filled"
               }
            ],
            "actions":[
               {
                  "type":"Action.Submit",
                  "title":"OK"
               }
            ]
         }
      }
   ]
}
